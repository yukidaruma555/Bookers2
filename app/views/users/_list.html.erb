

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <% if user.present? %> 
      <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image, size: "100x100" %>
      <% else %>
       <%= image_tag 'no_image.jpg', size: "100x100" %>
      <% end %>
      <% end %>
     <table class="table">
       <tbody> 
         <tr>
           <th>name</th>
           <th><%= current_user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           </tr>
       </tbody>
     </table>
     <% if user_signed_in? %>
     <%= link_to edit_user_path(user.id) do %>
     <i class="fa-solid fa-user-gear"></i> Edit
     <% end %>
     <% else %>
      <% link_to request.original_fullpath do %>
         <i class="fa-solid fa-user-gear"></i> Edit (Login required)
      <% end %>
     <% end %>