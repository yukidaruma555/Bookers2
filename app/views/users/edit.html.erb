<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Users info</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %> error prohibited this obj from being saved :
            <ul> 
             <% @user.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
           </ul>
          <% end %>
         
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label><br>
              <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label><br>
              <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="inputIntrodution">Introduction</label><br>
              <%= f.text_field :introduction %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
        <% end %>
    </div>
  </div>
</div>