<div class="container px-5 px-sm-o">
<div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this obj from being saved :
      <ul> 
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

<div class="col-md-3">
  <%= render 'users/list', user: current_user %>
  <%= render 'list', book: @new_book %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
       <tr> 
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
       </tr>
      </thead>
      <tbody>
         <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to (book.user) do %>
               <%= image_tag book.user.get_profile_image(100,100) %>
            </td>
              <% end %>
            <td>
              <%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>
</div>