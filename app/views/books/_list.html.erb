<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
     <table class="table">
       <tbody> 
         <tr>
           <th>name</th>
           <th><%= current_user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           </tr>
       </tbody>
     </table>
     <i class="fa-solid fa-user-gear", edit_user_path(user.id)></i>
      
<h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>